SELECT * FROM EMPLOYEE_DETAILS;

CREATE OR REPLACE VIEW EMPLOYEE_DETAILS AS
SELECT EMPLOYEE_ID,FIRST_NAME,SALARY,DEPARTMENT_ID FROM EMPLOYEES;

SELECT * FROM EMPLOYEE_DETAILS;


SELECT DEPARTMENT_ID,DEPARTMENT_NAME FROM DEPARTMENTS;

CREATE OR REPLACE VIEW DEPARTMENT_DETAILS AS
SELECT DEPARTMENT_ID,DEPARTMENT_NAME FROM DEPARTMENTS;


SELECT * FROM DEPARTMENT_DETAILS;



SELECT EMPLOYEE_ID,FIRST_NAME,SALARY,DEPARTMENT_ID FROM EMPLOYEES;

SELECT DEPARTMENT_ID,DEPARTMENT_NAME FROM DEPARTMENTS;


SELECT E.EMPLOYEE_ID, E.FIRST_NAME, E.SALARY,E.DEPARTMENT_ID,  D.DEPARTMENT_NAME
FROM EMPLOYEES E INNER JOIN DEPARTMENTS D
ON E.DEPARTMENT_ID = D.DEPARTMENT_ID;

CREATE OR REPLACE VIEW EMPLOYEE_DEPARTMENT_VIEW AS 
SELECT E.EMPLOYEE_ID, E.FIRST_NAME , E.SALARY , E.DEPARTMENT_ID , D.DEPARTMENT_NAME
FROM EMPLOYEES E INNER JOIN DEPARTMENTS D
ON E.DEPARTMENT_ID = D.DEPARTMENT_ID;

SELECT * FROM EMPLOYEE_DEPARTMENT_VIEW;

CREATE USER SANJU IDENTIFIED BY SANJU;

GRANT CONNECT TO SANJU;

GRANT ALL PRIVILEGES TO SANJU;
REVOKE ALL PRIVILEGES FROM SANJU;

REVOKE ALL PRIVILEGES ON *.* FROM SANJU;



GRANT SELECT ON EMPLOYEE_DEPARTMENT_VIEW TO SANJU;

REVOKE SELECT ON EMPLOYEE_DEPARTMENT_VIEW FROM SANJU;

SELECT * FROM ALL_USERS;

DROP USER SANJU;