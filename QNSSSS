-- TABLES

CREATE OR REPLACE PROCEDURE COMMON_TABLES(A IN NUMBER)
AS
--A NUMBER;
BEGIN
-- A:=5;
FOR I IN 1..20 LOOP
-- DBMS_OUTPUT.PUT_LINE(A);
DBMS_OUTPUT.PUT_LINE( I ||' * '|| A || ' = '|| A*I);
END LOOP;
END;
/

EXEC PROD1;

BEGIN
COMMON_TABLES(101);
END;
/



-- FACTORIALS


CREATE OR REPLACE PROCEDURE FACT(A IN NUMBER)
AS
ASUM NUMBER :=1;
BEGIN
FOR I IN 1..A LOOP
    ASUM := ASUM *I;
END LOOP;
DBMS_OUTPUT.PUT_LINE('FACTORIAL IS '|| ASUM );
END;
/


BEGIN
FACT(9);
END;
/



-- SQUARE


CREATE OR REPLACE PROCEDURE SQUARE (A IN NUMBER)
AS
BEGIN
DBMS_OUTPUT.PUT_LINE(A*A);
END;
/

BEGIN
SQUARE(5.5);
END;
/



-- PALIDROME

CREATE OR REPLACE PROCEDURE PALIDROME (A IN VARCHAR2)
AS
REV VARCHAR2(100) := '';
BEGIN
FOR I IN REVERSE 1..LENGTH(A) LOOP
        REV := REV || SUBSTR(A, I, 1);
    END LOOP;

IF A<>REV THEN
DBMS_OUTPUT.PUT_LINE('NO');
ELSE
DBMS_OUTPUT.PUT_LINE('YES');
END IF;
END;
/

BEGIN
PALIDROME('MALAYALAM');
END;
/


DROP PROCEDURE PROD1;



